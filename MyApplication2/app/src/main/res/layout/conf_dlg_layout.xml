<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_cornal_dlg_bg"
    android:layout_gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/dlg_title"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="提示"
            android:textSize="18sp"
            android:textColor="@color/red"
            />

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/dlg_tip_msg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:text="asdfafsas"
            android:textColor="@color/red"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_line" />
    <LinearLayout
        android:id="@+id/conf_canLL"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dlg_selector_left"
            android:clickable="true"
            android:gravity="center"
            android:text="是"
            android:textColor="@color/an_lanse"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/split_line" />

        <TextView
            android:id="@+id/btn_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dlg_selector_right"
            android:clickable="true"
            android:gravity="center"
            android:text="否"
            android:textColor="@color/an_lanse"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>